				<!-- Plugin para generar clases Java desde WSDL -->
<plugin>
	<groupId>org.codehaus.mojo</groupId>
	<artifactId>jaxws-maven-plugin</artifactId>
	<version>2.6</version>
	<executions>
		<execution>
			<id>wsimport</id>
			<goals>
				<goal>wsimport</goal>
			</goals>
			<configuration>
				<wsdlDirectory>${project.basedir}/src/main/resources/wsdl</wsdlDirectory>
				<wsdlFiles>
					<wsdlFile>servicio.wsdl</wsdlFile>
				</wsdlFiles>
				<packageName>com.example.api.soap.generated</packageName>
				<sourceDestDir>${project.build.directory}/generated-sources/jaxws</sourceDestDir>
				<keep>true</keep>
				<verbose>true</verbose>
				<extension>true</extension>
				<!-- Configuración para Java 17 -->
				<vmArgs>
					<vmArg>--add-opens</vmArg>
					<vmArg>java.xml/com.sun.org.apache.xerces.internal.jaxp=ALL-UNNAMED</vmArg>
				</vmArgs>
			</configuration>
		</execution>
	</executions>
	<dependencies>
		<dependency>
			<groupId>com.sun.xml.ws</groupId>
			<artifactId>jaxws-tools</artifactId>
			<version>4.0.0</version>
		</dependency>
	</dependencies>
</plugin>
